<p style="color: green"><%= notice %></p>

<%= render @line_item %>

<div>
  <%= link_to "Edit this line item", edit_line_item_path(@line_item), class: "btn btn-warning btn-custom border-0 me-3" %>
  <%= link_to "Back to line items", line_items_path, class: "btn btn-secondary btn-custom border-0 me-3" %>

  <%= button_to "Destroy this line item", @line_item, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
