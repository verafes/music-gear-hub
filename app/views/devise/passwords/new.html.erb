<section class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <h2 class="text-center mb-4">Forgot your password?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "needs-validation", method: :post }) do |f| %>
        <%= f.error_notification %></p>

        <div class="mb-3">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { class: "form-control", autocomplete: "email", placeholder: "Enter your email" },
                      label_html: { class: "form-label" } %>
        </div>

        <div class="d-flex justify-content-center gap-2">
          <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-custom border-0 px-4" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
