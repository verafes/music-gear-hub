<p class="text-success text-center mt-3"><%= notice %></p>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-7"> <!-- Adjust column width to match the edit form -->
      <div class="instrument-details card p-3">
        <div class="row">
          <div class="col-md-6">
            <!-- Image inside the card -->
            <% if @instrument.image.attached? %>
              <%= image_tag url_for(@instrument.image), alt: "Instrument image", class: "instrument-image img-fluid mb-3", style: "max-width: 300px; height: auto;" %>
            <% else %>
              <p>No image available</p>
            <% end %>

            <!-- Instrument Details -->
            <h5 class="card-title"><strong>Name:</strong> <%= @instrument.name %></h5>
            <p><strong>Category:</strong> <%= @instrument.category %></p>
            <p><strong>Price per day:</strong> <%= number_to_currency(@instrument.price_per_day) %></p>
            <p><strong>Available:</strong> <%= @instrument.available? ? "Yes" : "No" %></p>
            <p><strong>Condition:</strong> <%= @instrument.condition.capitalize %></p>
          </div>
        </div>
      </div>

      <div class="d-flex mt-2">
        <%= link_to "Edit this instrument", edit_instrument_path(@instrument), class: "btn btn-warning btn-custom border-0 me-3" %>
        <%= link_to "Back to instruments", instruments_path, class: "btn btn-secondary btn-custom border-0 me-3" %>
        <%= button_to "Destroy this instrument", @instrument, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
